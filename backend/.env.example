# Environment Configuration
NODE_ENV=development
PORT=3001

# API Configuration
API_VERSION=v1
API_BASE_URL=/api

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# Logging
LOG_LEVEL=debug

# Database Configuration
DATABASE_URL="postgresql://postgres:password@localhost:5432/plastic_crack_dev?schema=public"

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# Password Configuration
BCRYPT_ROUNDS=12

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_KEY_PREFIX=plastic-crack:
REDIS_MAX_RETRIES=3
REDIS_RETRY_DELAY=100
REDIS_CONNECT_TIMEOUT=10000
REDIS_COMMAND_TIMEOUT=5000

# Session Configuration
SESSION_SECRET=your-super-secret-session-key-change-in-production
SESSION_NAME=plastic-crack-session
SESSION_MAX_AGE=86400000

# Firebase Configuration
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nyour-firebase-private-key\n-----END PRIVATE KEY-----"
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your-project.iam.gserviceaccount.com
FIREBASE_STORAGE_BUCKET=your-project.appspot.com

# File Upload Configuration
MAX_FILE_SIZE=10485760
IMAGE_QUALITY=80
IMAGE_MAX_WIDTH=2048
IMAGE_MAX_HEIGHT=2048

# Redis (to be configured later)
# REDIS_URL=redis://localhost:6379

# JWT (to be configured later)
