{
  "name": "plastic-crack",
  "version": "0.1.0",
  "description": "Cross-platform miniature wargaming collection management app with AI-powered features and social community",
  "main": "index.js",
  "scripts": {
    "dev": "npm-run-all --parallel dev:*",
    "dev:backend": "cd backend && npm run dev",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:mobile": "cd mobile && npm run start",
    "build": "npm-run-all build:*",
    "build:backend": "cd backend && npm run build",
    "build:frontend": "cd frontend && npm run build",
    "build:mobile": "cd mobile && npm run build",
    "test": "npm-run-all test:*",
    "test:backend": "cd backend && npm run test",
    "test:frontend": "cd frontend && npm run test",
    "test:mobile": "cd mobile && npm run test",
    "lint": "npm-run-all lint:*",
    "lint:backend": "cd backend && npm run lint",
    "lint:frontend": "cd frontend && npm run lint",
    "lint:mobile": "cd mobile && npm run lint",
    "install:all": "npm install && npm run install:sub",
    "install:sub": "npm-run-all --parallel install:*",
    "install:backend": "cd backend && npm install",
    "install:frontend": "cd frontend && npm install",
    "install:mobile": "cd mobile && npm install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/DaiGumms/plastic-crack.git"
  },
  "keywords": [
    "miniatures",
    "warhammer",
    "collection",
    "management",
    "react-native",
    "react",
    "typescript",
    "postgresql",
    "ai",
    "machine-learning"
  ],
  "author": "David Morgan-Gumm",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/DaiGumms/plastic-crack/issues"
  },
  "homepage": "https://github.com/DaiGumms/plastic-crack#readme",
  "devDependencies": {
    "npm-run-all": "^4.1.5",
    "concurrently": "^8.2.0"
  },
  "workspaces": [
    "backend",
    "frontend", 
    "mobile",
    "shared"
  ]
}
