{
  "name": "plastic-crack",
  "version": "0.1.0",
  "description": "Cross-platform miniature wargaming collection management app with AI-powered features and social community",
  "main": "index.js",
  "scripts": {
    "dev": "npm-run-all --parallel dev:*",
    "dev:backend": "cd backend && npm run dev",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:mobile": "cd mobile && npm run start",
    "build": "npm-run-all build:*",
    "build:backend": "cd backend && npm run build",
    "build:frontend": "cd frontend && npm run build",
    "build:mobile": "cd mobile && npm run build",
    "build:shared": "cd shared && npm run build",
    "test": "npm-run-all test:*",
    "test:backend": "cd backend && npm run test",
    "test:frontend": "cd frontend && npm run test",
    "test:mobile": "cd mobile && npm run test",
    "test:shared": "cd shared && npm run test",
    "lint": "npm-run-all lint:*",
    "lint:backend": "cd backend && npm run lint",
    "lint:frontend": "cd frontend && npm run lint",
    "lint:mobile": "cd mobile && npm run lint",
    "lint:shared": "cd shared && npm run lint",
    "lint:fix": "npm-run-all lint:*:fix",
    "lint:backend:fix": "cd backend && npm run lint:fix",
    "lint:frontend:fix": "cd frontend && npm run lint:fix",
    "lint:mobile:fix": "cd mobile && npm run lint:fix",
    "lint:shared:fix": "cd shared && npm run lint:fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "type-check": "npm-run-all type-check:*",
    "type-check:backend": "cd backend && npm run type-check",
    "type-check:frontend": "cd frontend && npm run type-check",
    "type-check:shared": "cd shared && npm run type-check",
    "clean": "npm-run-all clean:*",
    "clean:backend": "cd backend && npm run clean",
    "clean:frontend": "cd frontend && npm run clean",
    "clean:shared": "cd shared && npm run clean",
    "docker:dev": "docker-compose up -d",
    "docker:dev:logs": "docker-compose logs -f",
    "docker:down": "docker-compose down",
    "install:all": "npm install && npm run install:sub",
    "install:sub": "npm-run-all --parallel install:*",
    "install:backend": "cd backend && npm install",
    "install:frontend": "cd frontend && npm install",
    "install:mobile": "cd mobile && npm install",
    "install:shared": "cd shared && npm install",
    "validate": "node scripts/validate-setup.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/DaiGumms/plastic-crack.git"
  },
  "keywords": [
    "miniatures",
    "warhammer",
    "collection",
    "management",
    "react-native",
    "react",
    "typescript",
    "postgresql",
    "ai",
    "machine-learning"
  ],
  "author": "David Morgan-Gumm",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/DaiGumms/plastic-crack/issues"
  },
  "homepage": "https://github.com/DaiGumms/plastic-crack#readme",
  "devDependencies": {
    "npm-run-all": "^4.1.5",
    "concurrently": "^8.2.0",
    "@typescript-eslint/eslint-plugin": "^6.7.0",
    "@typescript-eslint/parser": "^6.7.0",
    "eslint": "^8.49.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-unused-imports": "^3.0.0",
    "prettier": "^3.0.3",
    "typescript": "^5.2.2",
    "dotenv": "^16.3.1"
  },
  "workspaces": [
    "backend",
    "frontend", 
    "mobile",
    "shared"
  ]
}
